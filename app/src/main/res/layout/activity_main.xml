<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="395dp"
        android:layout_height="715dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/optBtn7"
                android:onClick="gotoLoadActivity"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginBottom="30dp"
                android:text="load url image" />

            <Button
                android:id="@+id/optBtn1"
                android:onClick="gotoProfileActivity"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginBottom="30dp"
                android:text="load profile image" />

            <Button
                android:id="@+id/optBtn2"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginBottom="30dp"
                android:text="url image download" />

            <Button
                android:id="@+id/optBtn3"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginBottom="30dp"
                android:text="edit image" />

            <Button
                android:id="@+id/optBtn4"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginBottom="30dp"
                android:text="image transformation" />

            <Button
                android:id="@+id/optBtn5"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginBottom="30dp"
                android:text="Button" />

            <Button
                android:id="@+id/optBtn6"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:text="Button" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>